{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "overrides": [
    {
      "files": ["*.stories.@(ts|tsx|js|jsx|mjs|cjs)"],
      "rules": {
        "storybook/hierarchy-separator": "error"
      }
    }
  ],
  "globals": {
    "React": "readonly",
    "JSX": "readonly",
    "globalThis": false
  },
  "rules": {
    "no-unused-vars": [0, { "args": "after-used", "argsIgnorePattern": "^_" }]
  }
}
